<style>
  .password-page__header .logo {
    width: {{escape section.settings.logo_max_width}}px;
  }
</style>

<header class="password-page__header" role="banner">
  <h1 class="password-page__header__inner" itemscope itemtype="http://schema.org/Organization">
    {{assign 'logo_width' (times (escape section.settings.logo_max_width) 1)}}
    {{#if (and (isnt section.settings.logo blank) (lte logo_width 2048))}}
      {{#capture 'image_size'}}{{escape section.settings.logo_max_width}}x{{/capture}}
      <img class="logo" src="{{img_url section.settings.logo image_size}}" alt="{{ shop.name }}" itemprop="logo">
    {{else}}
      <span class="h2">{{ shop.name }}</span>
    {{/if}}
  </h1>
</header>

{{#schema}}
  {
    "name": "Header",
    "class": "password-header-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "text",
        "id": "logo_max_width",
        "label": "Custom logo width (in pixels, max 2048)",
        "default": "200"
      }
    ]
  }
{{/schema}}
