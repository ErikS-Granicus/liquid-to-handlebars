<div data-section-id="{{ section.id }}" data-section-type="sidebar-section">
  <nav class="grid__item small--text-center medium-up--one-fifth" role="navigation">
    <hr class="hr--small medium-up--hide">
    <button id="ToggleMobileMenu" class="mobile-menu-icon medium-up--hide" aria-haspopup="true" aria-owns="SiteNav">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
      <span class="icon__fallback-text">{{t 'layout.navigation.menu'}}</span>
    </button>
    <div id="SiteNav" class="site-nav" role="menu">
      <ul class="list--nav">
        {{#each (get menus (toPath section.settings.main_menu_link_list 'links')) as |link|}}
          {{assign 'child_list_handle' (handleize link.title)}}
          {{#if (isnt (get menus (toPath child_list_handle 'links')) blank)}}
            <li class="site-nav--has-submenu site-nav__element">
              <button class="site-nav__link btn--link site-nav__expand hidden" aria-expanded="false" aria-controls="Collapsible{{ forloop.index }}">
                {{ link.title }}
                <span>+</span>
              </button>
              <button class="site-nav__link btn--link site-nav__collapse" aria-expanded="true" aria-controls="Collapsible{{ forloop.index }}">
                {{ link.title }}
                <span>-</span>
              </button>
              <ul id="Collapsible{{ forloop.index }}" class="site-nav__submenu site-nav__submenu--expanded" aria-hidden="false">
                {{#each (get menus (toPath child_list_handle 'links')) as |childlink|}}
                  <li class="{{#if (or childlink.active (is collection.current_type childlink.title) (is collection.current_vendor childlink.title))}}{{#unless (and forloop.first (contains childlink.title 'All') (gt current_tags.size 0))}} site-nav--active {{/unless}}{{/if}}">
                    <a href="{{ childlink.url }}" class="site-nav__link">{{escape childlink.title}}</a>
                  </li>
                {{/each}}
              </ul>
            </li>
          {{else}}
            <li class="site-nav__element {{#if link.active}}site-nav--active{{/if}}">
              <a href="{{ link.url }}" class="site-nav__link">{{ link.title }}</a>
            </li>
          {{/if}}
        {{/each}}
        {{#if shop.customer_accounts_enabled}}
          {{#if customer}}
            <li>
              <a href="/account" class="site-nav__link site-nav--account medium-up--hide">{{t 'layout.customer.account'}}</a>
            </li>
            <li>
              <a href="/account/logout" class="site-nav__link site-nav--account medium-up--hide">{{t 'layout.customer.log_out'}}</a>
            </li>
          {{else}}
            <li>
              <a href="/account/login" class="site-nav__link site-nav--account medium-up--hide">{{t 'layout.customer.log_in'}}</a>
            </li>
            <li>
              <a href="/account/register" class="site-nav__link site-nav--account medium-up--hide">{{t 'layout.customer.create_account'}}</a>
            </li>
          {{/if}}
        {{/if}}
      </ul>
      <ul class="list--inline social-links">
        {{#if (isnt settings.social_facebook_link blank)}}
          <li>
            <a href="{{escape settings.social_facebook_link}}" title="{{t 'layout.footer.social_platform' name shop.name platform 'Facebook'}}">
              {{include 'icon-facebook'}}
              <span class="icon__fallback-text">Facebook</span>
            </a>
          </li>
        {{/if}}
        {{#if (isnt settings.social_twitter_link blank)}}
          <li>
            <a href="{{escape settings.social_twitter_link}}" title="{{t 'layout.footer.social_platform' name shop.name platform 'Twitter'}}">
              {{include 'icon-twitter'}}
              <span class="icon__fallback-text">Twitter</span>
            </a>
          </li>
        {{/if}}
        {{#if (isnt settings.social_pinterest_link blank)}}
          <li>
            <a href="{{escape settings.social_pinterest_link}}" title="{{t 'layout.footer.social_platform' name shop.name platform 'Pinterest'}}">
              {{include 'icon-pinterest'}}
              <span class="icon__fallback-text">Pinterest</span>
            </a>
          </li>
        {{/if}}
        {{#if (isnt settings.social_instagram_link blank)}}
          <li>
            <a href="{{escape settings.social_instagram_link}}" title="{{t 'layout.footer.social_platform' name shop.name platform 'Instagram'}}">
              {{include 'icon-instagram'}}
              <span class="icon__fallback-text">Instagram</span>
            </a>
          </li>
        {{/if}}
        {{#if (isnt settings.social_snapchat_link blank)}}
          <li>
            <a href="{{escape settings.social_snapchat_link}}" title="{{t 'layout.footer.social_platform' name shop.name platform 'Snapchat'}}">
              {{include 'icon-snapchat'}}
              <span class="icon__fallback-text">Snapchat</span>
            </a>
          </li>
        {{/if}}
        {{#if (isnt settings.social_google_plus_link blank)}}
          <li>
            <a href="{{escape settings.social_google_plus_link}}" rel="publisher" title="{{t 'layout.footer.social_platform' name shop.name platform 'Google Plus'}}">
              {{include 'icon-google-plus'}}
              <span class="icon__fallback-text">Google Plus</span>
            </a>
          </li>
        {{/if}}
        {{#if (isnt settings.social_tumblr_link blank)}}
          <li>
            <a href="{{escape settings.social_tumblr_link}}" title="{{t 'layout.footer.social_platform' name shop.name platform 'Tumblr'}}">
              {{include 'icon-tumblr'}}
              <span class="icon__fallback-text">Tumblr</span>
            </a>
          </li>
        {{/if}}
        {{#if (isnt settings.social_youtube_link blank)}}
          <li>
            <a href="{{escape settings.social_youtube_link}}" title="{{t 'layout.footer.social_platform' name shop.name platform 'YouTube'}}">
              {{include 'icon-youtube'}}
              <span class="icon__fallback-text">YouTube</span>
            </a>
          </li>
        {{/if}}
        {{#if (isnt settings.social_vimeo_link blank)}}
          <li>
            <a href="{{escape settings.social_vimeo_link}}" title="{{t 'layout.footer.social_platform' name shop.name platform 'Vimeo'}}">
              {{include 'icon-vimeo'}}
              <span class="icon__fallback-text">Vimeo</span>
            </a>
          </li>
        {{/if}}
        {{#if (isnt settings.social_fancy_link blank)}}
          <li>
            <a href="{{escape settings.social_fancy_link}}" title="{{t 'layout.footer.social_platform' name shop.name platform 'Fancy'}}">
              {{include 'icon-fancy'}}
              <span class="icon__fallback-text">Fancy</span>
            </a>
          </li>
        {{/if}}
        {{#if (isnt settings.main_blog blank)}}
          <li>
            <a href="/blogs/{{ settings.main_blog }}.atom">
              {{include 'icon-rss'}}
              <span class="icon__fallback-text">Blog</span>
            </a>
          </li>
        {{/if}}
      </ul>
    </div>
    <hr class="medium-up--hide hr--small {{#if (is template.name 'index')}}hr--border-bottom{{/if}}">
  </nav>
</div>

{{#schema}}
  {
    "name": "Sidebar",
    "settings": [
      {
        "type": "link_list",
        "id": "main_menu_link_list",
        "label": "Menu",
        "default": "main-menu"
      }
    ]
  }
{{/schema}}
