<!-- /templates/customers/reset_password.liquid -->
<div class="form-reset-password form-vertical">
  {{#form 'reset_customer_password'}}

    <h1>{{t 'customer.reset_password.title'}}</h1>

    <p>{{t 'customer.reset_password.subtext' email email}}</p>

    {{default_errors form.errors}}

    <label for="ResetPassword" class="label--hidden">{{t 'customer.reset_password.password'}}</label>
    <input type="password" value="" name="customer[password]" id="ResetPassword" class="{{#if (contains form.errors 'password')}} input--error{{/if}}" placeholder="{{t 'customer.reset_password.password'}}">

    <label for="PasswordConfirmation" class="label--hidden">{{t 'customer.reset_password.password_confirm'}}</label>
    <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="{{#if (contains form.errors 'password_confirmation')}} input--error{{/if}}" placeholder="{{t 'customer.reset_password.password_confirm'}}">

    <input type="submit" class="btn" value="{{t 'customer.reset_password.submit'}}">
  {{/form}}
</div>
