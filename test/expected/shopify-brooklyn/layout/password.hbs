<!DOCTYPE html>
<!--[if IE 8]> <html class="lt-ie9" lang="en"> <![endif]-->
<!--[if (gt IE 8)|!(IE)]><!--> <html class="modern supports-fontface" lang="en"> <!--<![endif]-->
  <head>
    <meta charset="UTF-8">
    <title>
      {{ shop.name }}
    </title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1">

    {{#if settings.favicon}}
      <link rel="shortcut icon" href="{{img_url settings.favicon '32x32'}}" type="image/png" />
    {{/if}}

    {{include 'social-meta-tags'}}

    <!-- CSS ================================================== -->
    {{stylesheet_tag (asset_url 'timber.scss.css')}}
    {{stylesheet_tag (asset_url 'theme.scss.css')}}
    {{include 'google-fonts'}}

    {{ content_for_header }}
    {{include 'oldIE-js'}}

    <!--[if (gt IE 9)|!(IE)]><!--><script src="{{asset_url 'theme.js'}}" defer="defer"></script><!--<![endif]-->
    <!--[if lte IE 9]><script src="{{asset_url 'theme.js'}}"></script><![endif]-->

    <!-- JS ================================================== -->
    {{script_tag (asset_url 'modernizr.min.js')}}
    <script>
      window.password = window.password || {};

      var password = {
        strings: {
          pageClose: {{json (t 'general.password_page.close')}}
        }
      }

      window.theme = window.theme || {};
      theme.strings = {
        addressError: {{json (t 'home_page.map.address_error')}},
        addressNoResults: {{json (t 'home_page.map.address_no_results')}},
        addressQueryLimit: {{json (t 'home_page.map.address_query_limit_html')}},
        authError: {{json (t 'home_page.map.auth_error_html')}}
      };
    </script>

    {{script_tag '//ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js'}}

  </head>

  <body class="template-password">

    <div class="password-page__wrapper">
      {% body %}

      <footer class="password-page__footer" role="contentinfo">
        <div class="password-page__footer_inner">
          {{#capture 'shopify'}}
          <a class="shopify-link" href="//www.shopify.com" target="_blank" title="Create your own online store with Shopify">
            {{include 'svg-definitions' 'shopify-logo'}}
            <span class="shopify-name">Shopify</span>
          </a>
          {{/capture}}
          {{t 'general.password_page.powered_by_shopify_html' shopify shopify}}
        </div>
      </footer>
    </div>

    <div id="LoginModal" class="password-page__login-form text-center mfp-hide">
      <p class="h4">{{t 'general.password_page.login_form_heading'}}</p>
      {{#form 'storefront_password'}}
      {{default_errors form.errors}}
      <label for="password" class="hidden-label">{{t 'general.password_page.login_form_password_label'}}</label>
      <div class="input-group">
        <input type="password" name="password" id="password" class="input-group-field" placeholder="{{t 'general.password_page.login_form_password_placeholder'}}" autofocus>
        <span class="input-group-btn">
          <input type="submit" class="btn password-page__login-form__submit" value="{{t 'general.password_page.login_form_submit'}}">
        </span>
      </div>
      {{/form}}
      <p class="admin-login">{{t 'general.password_page.admin_link_html'}}</p>
    </div>

  </body>
</html>
