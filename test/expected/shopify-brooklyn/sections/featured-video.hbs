<div class="wrapper">
  {{#if (isnt section.settings.heading blank)}}
    <div class="section-header text-center">
      <h2 class="h1 section-header__title">{{escape section.settings.heading}}</h2>
      <hr class="hr--small">
    </div>
  {{/if}}
  <div class="grid">
    <div class="grid__item one-whole">
      <div class="video-wrapper">
        {{#if (is section.settings.video_url blank)}}
          <iframe src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
        {{else}}
          {{#if (is section.settings.video_url.type 'youtube')}}
            <iframe src="//www.youtube.com/embed/{{ section.settings.video_url.id }}?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
          {{/if}}
          {{#if (is section.settings.video_url.type 'vimeo')}}
            <iframe src="//player.vimeo.com/video/{{ section.settings.video_url.id }}?color={{remove settings.color_secondary '#'}}&byline=0&portrait=0&badge=0" width="850" height="480" frameborder="0" allowfullscreen></iframe>
          {{/if}}
        {{/if}}
      </div>
    </div>
  </div>
</div>

{{#schema}}
  {
    "name": "Video",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Video"
      },
      {
        "type": "video_url",
        "id": "video_url",
        "label": "Video link",
        "accept": ["youtube", "vimeo"]
      }
    ],
    "presets": [
      {
        "name": "Video",
        "category": "Video"
      }
    ]
  }
{{/schema}}
