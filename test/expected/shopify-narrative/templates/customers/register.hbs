<!-- /templates/customers/register.liquid -->
<div class="page-width customers-register">
  <div class="grid">
    <div class="grid__item medium-up--four-fifths medium-up--push-one-tenth">
      <div class="customers-register__container">
        <h1 class="customer-form__title h2">{{t 'customer.register.title'}}</h1>

        {{#form 'create_customer'}}
        {{default_errors form.errors}}

        <div class="grid">
          <div class="grid__item medium-up--one-half">
            <label for="FirstName" class="label--hidden">{{t 'customer.register.first_name'}}</label>
            <input type="text" name="customer[first_name]" id="FirstName" placeholder="{{t 'customer.register.first_name'}}" {{#if form.first_name}}value="{{ form.first_name }}"{{/if}} autocapitalize="words" autofocus>
          </div>

          <div class="grid__item medium-up--one-half">
            <label for="LastName" class="label--hidden">{{t 'customer.register.last_name'}}</label>
            <input type="text" name="customer[last_name]" id="LastName" placeholder="{{t 'customer.register.last_name'}}" {{#if form.last_name}}value="{{ form.last_name }}"{{/if}} autocapitalize="words">
          </div>
        </div>

        <label for="Email" class="label--hidden">{{t 'customer.register.email'}}</label>
        <input type="email" name="customer[email]" id="Email" class="{{#if (contains form.errors 'email')}} input--error{{/if}}" placeholder="{{t 'customer.register.email'}}" {{#if form.email}} value="{{ form.email }}"{{/if}} autocorrect="off" autocapitalize="off">

        <label for="CreatePassword" class="label--hidden">{{t 'customer.register.password'}}</label>
        <input type="password" name="customer[password]" id="CreatePassword" class="{{#if (contains form.errors 'password')}} input--error{{/if}}" placeholder="{{t 'customer.register.password'}}">

        <p>
          <input type="submit" value="{{t 'customer.register.submit'}}" class="btn">
          <a href="{{ shop.url }}" class="btn btn--clear">{{t 'customer.register.cancel'}}</a>
        </p>
        {{/form}}
      </div>
    </div>
  </div>
</div>
