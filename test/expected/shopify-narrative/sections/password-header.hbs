<header class="password-header text-center" data-section-id="{{ section.id }}" data-section-type="password-header">
  {{#if section.settings.logo}}
    {{#capture 'image_size'}}{{ section.settings.logo_max_width }}x{{/capture}}
    <img src="{{img_url section.settings.logo image_size}}" alt="{{default section.settings.logo.alt shop.name}}" itemprop="logo">
  {{else}}
    <h1 class="password-header__shop-name h4">{{ shop.name }}</h1>
  {{/if}}
</header>

{{#schema}}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "text",
      "id": "logo_max_width",
      "label": "Custom logo width (in pixels)",
      "default": "100"
    }
  ]
}
{{/schema}}
