<div class="section-header section-header--large">
  <h1 class="section-header__title">{{t 'customer.activate_account.title'}}</h1>
</div>

<p>{{t 'customer.activate_account.subtext'}}</p>

<div class="grid">
  <div class="grid__item wide--one-half large--two-thirds medium-down--one-whole">

    {{#comment}}
      This form must use 'activate_customer_password'
    {{/comment}}
    {{#form 'activate_customer_password'}}

      {{default_errors form.errors}}

      <label for="CustomerPassword">{{t 'customer.activate_account.password'}}</label>
      <input type="password" value="" name="customer[password]" id="CustomerPassword">

      <label for="CustomerPasswordConfirmation">{{t 'customer.activate_account.password_confirm'}}</label>
      <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation">

      <div>
        <p>
          <input type="submit" class="btn" value="{{t 'customer.activate_account.submit'}}">
        </p>
        <input type="submit" class="btn--secondary" name="decline" value="{{t 'customer.activate_account.cancel'}}">
      </div>
    {{/form}}

  </div>
</div>
