<div class="grid">

  <div class="grid__item post-large--two-thirds push--post-large--one-sixth">

    <div class="section-header">
      <h1 class="section-header--title">{{{ page.title }}}</h1>
    </div>

    <div class="rte">
      {{{ page.content }}}
    </div>

    <div>
      
      {{#form 'contact'}}

        {{#if form.posted_successfully}}
          <p class="note form-success">
            {{t 'contact.form.post_success'}}
          </p>
        {{/if}}

        {{default_errors form.errors}}

        {{assign 'name_attr' (handle (t 'contact.form.name'))}}
        <label for="ContactFormName" class="label--hidden">{{t 'contact.form.name'}}</label>
        <input type="text" id="ContactFormName" name="contact[{{ name_attr }}]" placeholder="{{t 'contact.form.name'}}" autocapitalize="words" value="{{#if get form name_attr}}{{get form name_attr}}{{else if customer}}{{ customer.name }}{{/if}}">

        <label for="ContactFormEmail" class="label--hidden">{{t 'contact.form.email'}}</label>
        <input type="email" id="ContactFormEmail" name="contact[email]" placeholder="{{t 'contact.form.email'}}" autocorrect="off" autocapitalize="off" value="{{#if form.email}}{{ form.email }}{{else if customer}}{{ customer.email }}{{/if}}">

        {{assign 'name_attr' (handle (t 'contact.form.phone'))}}
        <label for="ContactFormPhone" class="label--hidden">{{t 'contact.form.phone'}}</label>
        <input type="tel" id="ContactFormPhone" name="contact[{{ name_attr }}]" placeholder="{{t 'contact.form.phone'}}" pattern="[0-9\-]*" value="{{#if get form name_attr}}{{get form name_attr}}{{else if customer}}{{ customer.phone }}{{/if}}">

        <label for="ContactFormMessage" class="label--hidden">{{t 'contact.form.message'}}</label>
        <textarea rows="10" id="ContactFormMessage" name="contact[body]" placeholder="{{t 'contact.form.message'}}">{{#if form.body}}{{ form.body }}{{/if}}</textarea>

        <input type="submit" class="btn right" value="{{t 'contact.form.send'}}">

      {{/form}}
      
   </div>
 </div>
</div>
