{{#capture 'header_title'}} {{t 'customer.activate_account.title'}} {{/capture}}
{{include 'page_header' header_title}}

<div class="wrapper wrapper--margins wrapper--center">

  <div class="form--customer">

    {{#form 'activate_customer_password'}}

      {{default_errors form.errors}}

      <p>{{t 'customer.activate_account.subtext' email email}}</p>

      <div class="form__row">
        <div class="form__column full">
          <label for="CustomerPassword">{{t 'customer.activate_account.password'}}</label>
          <input type="password" value="" name="customer[password]" id="CustomerPassword" class="input-full">
        </div>
      </div>

      <div class="form__row">
        <div class="form__column full">
          <label for="CustomerPasswordConfirmation">{{t 'customer.activate_account.password_confirm'}}</label>
          <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="input-full">
        </div>
      </div>

      <input type="submit" class="btn btn--regular btn--color btn--fill" value="{{t 'customer.activate_account.submit'}}">
      <input type="submit" class="btn btn--regular btn--dark btn--outline" name="decline" value="{{t 'customer.activate_account.cancel'}}">

    {{/form}}

  </div>

</div>