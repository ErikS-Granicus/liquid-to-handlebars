{{#capture 'header_title'}} {{t 'customer.reset_password.title'}} {{/capture}}
{{include 'page_header' header_title}}

<div class="wrapper wrapper--margins wrapper--center">

    <div class="form--customer">
      {{#form 'reset_customer_password'}}

        {{default_errors form.errors}}

        <p>{{t 'customer.reset_password.subtext' email email}}</p>

        <div class="form__row">
          <div class="form__column full">
            <label for="ResetPassword">{{t 'customer.reset_password.password'}}</label>
            <input type="password" value="" name="customer[password]" id="ResetPassword" class="input-full{{#if (contains form.errors 'password')}} error{{/if}}">
          </div>
        </div>

        <div class="form__row">
          <div class="form__column full">
            <label for="PasswordConfirmation">{{t 'customer.reset_password.password_confirm'}}</label>
            <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="input-full{{#if (contains form.errors 'password_confirmation')}} error{{/if}}">
          </div>
        </div>

        <input type="submit" class="btn btn--regular btn--color btn--fill" value="{{t 'customer.reset_password.submit'}}">

      {{/form}}
    </div>

</div>
