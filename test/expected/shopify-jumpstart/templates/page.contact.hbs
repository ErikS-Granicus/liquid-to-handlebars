{{assign 'header_title' page.title}}
{{include 'page_header' header_title}}

<div class="wrapper wrapper--margins">

  <div class="rte">
    {{{ page.content }}}
  </div>

  <div class="contact-form">

    {{#form 'contact'}}

      <h2 class="home-section-title less-margin">{{t 'contact.form.title'}}</h2>

      {{#if form.posted_successfully}}
        <p class="note form-success">
          {{t 'contact.form.post_success'}}
        </p>
      {{/if}}

      {{default_errors form.errors}}

      <div class="form__row">

        <div class="form__column third">
          {{assign 'name_attr' (handle (t 'contact.form.name'))}}
          <label for="ContactFormName">{{t 'contact.form.name'}}</label>
          <input type="text" id="ContactFormName" class="input-full" name="contact[{{ name_attr }}]" autocapitalize="words" value="{{#if get form name_attr}}{{get form name_attr}}{{else if customer}}{{ customer.name }}{{/if}}">
        </div>

        <div class="form__column third">
          <label for="ContactFormEmail">{{t 'contact.form.email'}}</label>
          <input type="email" id="ContactFormEmail" class="input-full" name="contact[email]" autocorrect="off" autocapitalize="off" value="{{#if form.email}}{{ form.email }}{{else if customer}}{{ customer.email }}{{/if}}">
        </div>

        <div class="form__column third">
          {{assign 'name_attr' (handle (t 'contact.form.phone'))}}
          <label for="ContactFormPhone">{{t 'contact.form.phone'}}</label>
          <input type="tel" id="ContactFormPhone" class="input-full" name="contact[{{ name_attr }}]" pattern="[0-9\-]*" value="{{#if get form name_attr}}{{get form name_attr}}{{else if customer}}{{ customer.phone }}{{/if}}">
        </div>

      </div>

      <div class="form__row">
        <div class="form__column full">
          <label for="ContactFormMessage">{{t 'contact.form.message'}}</label>
          <textarea rows="10" id="ContactFormMessage" class="input-full" name="contact[body]">{{#if form.body}}{{ form.body }}{{/if}}</textarea>
        </div>
      </div>

      <input type="submit" class="btn btn--regular btn--color btn--fill" value="{{t 'contact.form.send'}}">

    {{/form}}

  </div>

</div>
