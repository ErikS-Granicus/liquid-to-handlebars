<header class="site-header" role="banner">
  <div class="wrapper">

    <h1 class="h1 site-header__logo {{#if settings.logo_use_image}} display-table use-image {{/if}}" itemscope itemtype="http://schema.org/Organization">

    {{#if section.settings.logo}}
      <a href="/" itemprop="url" class="site-header__logo-link display-table-cell">
        {{#capture 'image_size'}}{{escape section.settings.logo_max_width}}x{{/capture}}
        <img src="{{img_url section.settings.logo image_size}}"
              srcset="{{img_url section.settings.logo image_size}} 1x, {{img_url section.settings.logo image_size scale 2}} 2x"
              alt="{{default section.settings.logo.alt shop.name}}"
              itemprop="logo">
      </a>
    {{else}}
      <a href="/" itemprop="url" class="site-header__logo-text">{{ shop.name }}</a>
    {{/if}}

    </h1>

    <p class="password-login right">
      <a href="#login-modal" class="js-toggle-login-modal" data-mfp-src="#login-modal">
        <span aria-hidden="true">{{include 'asset_svg' 'lock'}}</span>
        <span class="fallback-text">{{t 'general.password_page.password_link'}}</span>
      </a>
    </p>

  </div>
</header>

<div class="header__custom display-table parallax-bg">
  <div class="display-table-cell prlx-txt">
    <div class="wrapper wrapper--margins">

      <h2 itemprop="name" class="h1">{{escape section.settings.title}}</h2>

      {{#if (isnt shop.password_message 'blank')}}
        <span>{{ shop.password_message }}</span>
      {{/if}}

      <hr />

    </div>
  </div>
  <span class="prlx-bg" style="background-color: {{ settings.color_body_bg_alt }}"></span>
</div>

{{#schema}}
  {
    "name": "Header",
    "class": "password-header-section password-page-section",
    "settings": [{
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "text",
        "id": "logo_max_width",
        "label": "Custom logo width (in pixels)",
        "default": "100"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Coming Soon"
      }
    ]
  }
{{/schema}}
