<div id="home-newsletter" class="index-section home-section">
  <div class="home-newsletter">
    <div class="wrapper wrapper--margins">
      <div class="newsletter text-center password-input-group">
        {{#form 'customer'}}
          {{default_errors form.errors}}
          {{#if form.posted_successfully}}
            <p class="form--success">{{t 'general.newsletter_form.confirmation'}}</p>
          {{else}}
            <div class="input-group">
              <input type="hidden" name="contact[tags]" value="newsletter">
              {{#if (isnt section.settings.heading blank)}}
                <h2 class="home-section-title" for="Email">{{escape section.settings.heading}}</h2>
              {{else}}
                <label class="visually-hidden" for="Email">{{t 'general.newsletter_form.newsletter_email'}}</label>
              {{/if}}
              {{#unless (is section.settings.subheading blank)}}
                <h4>{{escape section.settings.subheading}}</h4>
              {{/unless}}
              <input type="email" value="{{#if customer}}{{ customer.email }}{{/if}}" placeholder="{{t 'general.newsletter_form.email_placeholder'}}" name="contact[email]" id="Email" class="input-group__field newsletter__input" autocorrect="off" autocapitalize="off">
              <span class="input-group__btn">
                <button type="submit" class="btn newsletter__submit btn--regular btn--fill btn--color" name="commit" id="Subscribe">
                  <span class="newsletter__submit-text--large">{{t 'general.newsletter_form.submit'}}</span>
                </button>
              </span>
            </div>
          {{/if}}
        {{/form}}
      </div>
    </div>
  </div>
</div>

{{#schema}}
  {
    "name": "Newsletter",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Stay up to date"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Promotions, new products and sales. Directly to your inbox."
      },
      {
        "type": "paragraph",
        "content": "Any customers who sign up will have an account created for them in Shopify. [View customers](/admin/customers?query=&accepts_marketing=1)"
      }
    ],
    "presets": [{
      "name": "Newsletter",
      "category": "Promotional"
    }],
    "blocks" : []
  }
{{/schema}}
