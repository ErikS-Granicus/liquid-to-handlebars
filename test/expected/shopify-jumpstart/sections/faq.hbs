<div id="home-faq" class="index-section home-section" data-section-id="{{ section.id }}" data-section-type="home-faq">
	<div class="home-faq-list">
		<div class="wrapper wrapper--margins">

			{{#if (isnt section.settings.title blank)}}
			  <h2 class="home-section-title">{{escape section.settings.title}}</h2>
			{{/if}}

			<div class="jumpstart-accordion">
			  {{#each section.blocks as |block|}}

					<div class="section section-{{ block.id }} {{#if (is forloop.first true)}}opened{{/if}}" data-block-id="{{ block.id }}" {{ block.shopify_attributes }}>
						<h3 class="h4 title">{{escape block.settings.home-faq-title}}</h3>
						<div class="content">{{ block.settings.home-faq-content }}</div>
					</div>

			  {{/each}}
			</div>

		</div>
	</div>
</div>

{{#schema}}
	{
		"name": "FAQs",
		"max_blocks": 20,
		"settings": [
			{
				"type": "text",
				"id": "title",
				"label": "Header",
				"default": "FAQ"
			}
		],
		"blocks" : [
			{
				"type": "text",
				"name": "FAQ",
				"settings": [
					{
						"type": "text",
						"id": "home-faq-title",
						"default": "Question and answer",
						"label": "Heading"
					},
					{
						"type": "richtext",
						"id": "home-faq-content",
						"default": "<p>This section doesnâ€™t currently include any content. <b>Add content to this section using the sidebar.</b></p>",
						"label": "Text"
					}
				]
			}
		],
		"presets": [
			{
				"name": "FAQs",
				"category": "Text",
				"blocks": [
					{
						"type": "text"
					},
					{
						"type": "text"
					},
					{
						"type": "text"
					}
				]
			}
		]
	}
{{/schema}}
