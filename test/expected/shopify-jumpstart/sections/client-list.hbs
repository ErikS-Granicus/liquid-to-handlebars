<div id="home-clients" class="index-section home-section">
  <div class="home-clients">


	{{assign 'cols' section.blocks.size}}
	<!-- {{ cols }} -->
	{{#is cols 1}}
	    {{assign 'grid_class' 'grid__item one-whole'}}
	  {{else is cols 2}}
	    {{assign 'grid_class' 'grid__item one-half'}}
	  {{else is cols 3}}
	    {{assign 'grid_class' 'grid__item one-third'}}
	  {{else is cols 4}}
	    {{assign 'grid_class' 'grid__item one-quarter'}}
	  {{else is cols 5}}
	    {{assign 'grid_class' 'grid__item one-fifth'}}
	  {{else}}
	    {{assign 'grid_class' 'grid__item one-sixth medium-down--one-third'}}
	{{/is}}

	<div class="wrapper">

	  <ul class="clients-list grid small-gutter">

		{{#each section.blocks as |block|}}

			<li class="{{ grid_class }}" {{ block.shopify_attributes }}>
        <div class="clients-list__center-wrap">
        {{#if (isnt block.settings.link blank)}}
					  <a href="{{ block.settings.link }}" target="_blank">
					{{/if}}
					{{#if (isnt block.settings.image blank)}}
            {{assign 'img_url' (replace (img_url block.settings.image '1x1') '_1x1.' '_{width}x.')}}
            <img class="no-js lazyload"
              data-src="{{ img_url }}"
              data-widths="[108, 360, 375, 414, 568, 684, 720, 732, 736, 768, 1024, 1200, 1296, 1512, 1728, 1944, 2048]"
              data-aspectratio="{{ block.settings.image.aspect_ratio }}"
              data-sizes="auto"
              data-parent-fit="width"              
              alt="{{escape block.settings.image.alt}}">
              <noscript>
                <img src="{{img_url block.settings.image '580x'}}"
                  srcset="{{img_url block.settings.image '580x'}} 1x, {{img_url block.settings.image '580x' scale 2}} 2x"
                  alt="{{ block.settings.image.alt }}" style="opacity:1;">
              </noscript>
					{{else}}
					  {{placeholder_svg_tag 'logo' 'clients-list placeholder-svg'}}
					{{/if}}
          
					{{#if (isnt block.settings.link blank)}}
					  </a>
					{{/if}}

        </div>
			</li>
		{{/each}}
	  </ul>
	</div>
  </div>
</div>
