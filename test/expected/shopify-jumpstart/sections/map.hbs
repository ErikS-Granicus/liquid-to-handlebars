{{assign 'display_map' false}}
{{#if (and (isnt section.settings.api_key blank) section.settings.map_address)}}
  {{assign 'display_map' true}}
{{/if}}

<style>
  #map-section__image--{{ section.id }} {
    background-position: {{ section.settings.position }};
  }
  @media screen and (max-width: 768px) {
    #map-section__image--{{ section.id }} {
      {{#unless (is section.settings.image blank)}}
        padding-top: {{times (divided_by 1 section.settings.image.aspect_ratio) 100}}%;
      {{/unless}}
    }
  }
</style>

<div class="index-section map-section{{#if display_map}} map-section--display-map{{/if}}" data-section-id="{{ section.id }}" data-section-type="map-section" data-api-key="{{ section.settings.api_key }}">
  <div class="map-section__wrapper">
    <div class="wrapper map-section__content-wrapper">
      <div class="map-section__overlay">
        {{#if (isnt section.settings.map_title blank)}}
          <h4 class="h1--mini">{{escape section.settings.map_title}}</h4>
        {{/if}}
        {{#if (isnt section.settings.address blank)}}
          <div class="rte-setting">{{ section.settings.address }}</div>
          {{#if (and (isnt section.settings.button blank) (isnt section.settings.map_address blank))}}
            <a href="https://maps.google.com?daddr={{escape section.settings.map_address}}" class="btn btn--outline btn--small btn--dark" target="_blank">
              {{#if section.settings.show_pin}}
                <span class="icon-pin" aria-hidden="true">{{include 'asset_svg' 'pin'}}</span>
              {{/if}}
              {{escape section.settings.button}}
            </a>
          {{/if}}
        {{/if}}
      </div>
    </div>
    <div class="map-section__background-wrapper">
      {{#if section.settings.image}}
        <div id="map-section__image--{{ section.id }}" class="map-section__image lazyload"
            data-bgset="{{include 'bgset",' image: section.settings.image}}"
            data-sizes="auto"
            data-parent-fit="cover"
           style="background-image: url('{{img_url section.settings.image '300x300'}});">
        </div>
        <noscript>
          <div id="map-section__image--{{ section.id }}" class="map-section__image" style="background-image: url({{img_url section.settings.image 'x800' crop 'top'}});"></div>
        </noscript>
      {{else}}
        <div class="map-section__image">
          {{placeholder_svg_tag 'lifestyle-2' 'placeholder-svg'}}
        </div>
      {{/if}}
      {{#if display_map}}
        <div class="map-section__container"
             id="Map-{{ section.id }}"
             data-address-setting="{{escape section.settings.map_address}}"
             data-marker-color="{{ settings.color_primary }}">
        </div>
      {{/if}}
    </div>
  </div>
</div>

{{#schema}}
  {
    "name": "Map",
    "settings": [
      {
        "id": "map_title",
        "type": "text",
        "label": "Heading",
        "default": "Our store"
      },
      {
        "id": "address",
        "type": "richtext",
        "label": "Address and hours",
        "default": "<p>123 Fake St.<br>Toronto, Canada</p><p>Mon - Fri, 10am - 9pm<br>Saturday, 11am - 9pm<br>Sunday, 11am - 5pm</p>"
      },
      {
        "id": "map_address",
        "type": "text",
        "label": "Map address",
        "info": "Google Maps will find the exact location",
        "default": "80 Spadina Ave, Toronto"
      },
      {
        "type": "text",
        "id": "button",
        "label": "Map link label",
        "default": "Get directions"
      },
      {
        "id": "show_pin",
        "type": "checkbox",
        "label": "Show pin",
        "default": true
      },
      {
        "type": "header",
        "content": "Background"
      },
      {
        "id": "api_key",
        "type": "text",
        "label": "Google Maps API key",
        "info": "You’ll need to [register a Google Maps API Key](https://help.shopify.com/manual/using-themes/troubleshooting/map-section-api-key) to display the map"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "Displayed if the map isn’t loaded"
      },
      {
        "type": "select",
        "id": "position",
        "label": "Image position",
        "default": "center center",
        "options": [
          {
            "label": "Top left",
            "value": "top left"
          },
          {
            "label": "Top center",
            "value": "top center"
          },
          {
            "label": "Top right",
            "value": "top right"
          },
          {
            "label": "Middle left",
            "value": "center left"
          },
          {
            "label": "Middle center",
            "value": "center center"
          },
          {
            "label": "Middle right",
            "value": "center right"
          },
          {
            "label": "Bottom left",
            "value": "bottom left"
          },
          {
            "label": "Bottom center",
            "value": "bottom center"
          },
          {
            "label": "Bottom right",
            "value": "bottom right"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Map",
        "category": "Store information"
      }
    ]
  }
{{/schema}}
