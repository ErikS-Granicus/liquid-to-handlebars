<div class="newsletter text-center" data-section-id="{{ section.id }}" data-section-type="newsletter-signup-section">
  {{#unless (is section.settings.heading blank)}}
    <h2 {{#if (is section.settings.subheading blank)}}class="section-title"{{/if}}>{{escape section.settings.heading}}</h2>
  {{/unless}}
  {{#unless (is section.settings.subheading blank)}}
    <p>{{escape section.settings.subheading}}</p>
  {{/unless}}
  <div class="wrapper">
    {{#form 'customer'}}
      {{default_errors form.errors}}
      {{#if form.posted_successfully}}
        <p class="form--success">{{t 'general.newsletter_form.confirmation'}}</p>
      {{else}}
        <div class="input-group">
          <input type="hidden" name="contact[tags]" value="newsletter">
          <label for="Email" class="newsletter__label label--hidden">{{t 'general.newsletter_form.email_placeholder'}}</label>
          <input type="email" value="{{#if customer}}{{ customer.email }}{{/if}}" placeholder="{{t 'general.newsletter_form.email_placeholder'}}" name="contact[email]" id="Email" class="input-group__field newsletter__input" autocorrect="off" autocapitalize="off">
          <span class="input-group__btn">
            <button type="submit" class="btn newsletter__submit" name="commit" id="Subscribe">
              <span class="newsletter__submit-text--large">{{t 'general.newsletter_form.submit'}}</span>
            </button>
          </span>
        </div>
      {{/if}}
    {{/form}}
  </div>
</div>

{{#schema}}
  {
    "name": "Newsletter",
    "class": "index-section newsletter-signup",
    "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe to our newsletter"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "A short sentence describing what someone will receive by subscribing"
    },
    {
        "type": "paragraph",
        "content": "Any customers who sign up, will have an account created for them in Shopify. [View customers](/admin/customers?query=&accepts_marketing=1)"
      }
    ],
    "presets": [{
      "name": "Newsletter",
      "category": "Promotional"
    }]
  }
{{/schema}}
