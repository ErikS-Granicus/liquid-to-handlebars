<div class="grid">

  <div class="grid-item large--one-third push--large--one-third text-center">

    <h1>{{t 'customer.register.title'}}</h1>

    {{#form 'create_customer'}}

      {{include 'form-errors-custom'}}

      <label for="first_name" class="hidden-label">{{t 'customer.register.first_name'}}</label>
      <input type="text" value="" name="customer[first_name]" id="first_name" placeholder="{{t 'customer.register.first_name'}}" {{#if (contains form.errors 'first_name')}} class="error"{{/if}} autofocus>

      <label for="last_name" class="hidden-label">{{t 'customer.register.last_name'}}</label>
      <input type="text" value="" name="customer[last_name]" id="last_name" placeholder="{{t 'customer.register.last_name'}}" {{#if (contains form.errors 'last_name')}} class="error"{{/if}}>

      <label for="email" class="hidden-label">{{t 'customer.register.email'}}</label>
      <input type="email" value="" name="customer[email]" id="email" placeholder="{{t 'customer.register.email'}}" {{#if (contains form.errors 'email')}} class="error"{{/if}} autocorrect="off" autocapitalize="off">

      <label for="password" class="hidden-label">{{t 'customer.register.password'}}</label>
      <input type="password" value="" name="customer[password]" id="create_password" placeholder="{{t 'customer.register.password'}}" {{#if (contains form.errors 'password')}} class="error"{{/if}}>
      <p>
        <input type="submit" value="{{t 'customer.register.submit'}}" class="btn">
      </p>
      {{t 'customer.register.or'}} <a href="{{ shop.url }}">{{t 'customer.register.cancel'}}</a>

    {{/form}}

  </div>

</div>
