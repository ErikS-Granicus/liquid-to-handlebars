<div class="grid">
  <div class="grid-item large--one-third push--large--one-third">

    {{#form 'reset_customer_password'}}

      <h1>{{t 'customer.reset_password.title'}}</h1>

      <p>{{t 'customer.reset_password.subtext' email email}}</p>

      {{include 'form-errors-custom'}}

      <label for="reset_password">{{t 'customer.reset_password.password'}}</label>
      <input type="password" value="" name="customer[password]" id="reset_password" {{#if (contains form.errors 'password')}} class="error"{{/if}}>

      <label for="password_confirmation">{{t 'customer.reset_password.password_confirm'}}</label>
      <input type="password" value="" name="customer[password_confirmation]" id="password_confirmation" {{#if (contains form.errors 'password_confirmation')}} class="error"{{/if}}>

      <div class="text-center">
        <input type="submit" class="btn" value="{{t 'customer.reset_password.submit'}}">
      </div>

    {{/form}}

  </div>
</div>
