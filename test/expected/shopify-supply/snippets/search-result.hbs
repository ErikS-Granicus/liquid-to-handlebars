<div class="grid">

  {{#if item.featured_image}}

  {{#comment}}
    We have a featured_image, so it's likely a product
  {{/comment}}
  <div class="grid-item one-third">
    <a href="{{ item.url }}" title="{{escape item.title}}">
      {{img_tag (img_url item.featured_image.src 'medium') item.featured_image.alt}}
    </a>
  </div>

  {{/if}}

  {{#comment}}
    If we don't have a featured_image, add a push-- class to keep the alignment the same
  {{/comment}}
  <div class="grid-item two-thirds {{#unless item.featured_image}}push--one-third{{/unless}}">
    <h1 class="h2" itemprop="name">{{link_to item.title item.url}}</h1>

    {{#if (gt item.compare_at_price item.price)}}
      <li>
        <span id="productPrice" class="h1">
          {{include 'price' item.price}}
        </span>
      </li>
      <li>
        <span id="comparePrice" class="sale-tag large">
          {{assign 'compare_price' item.compare_at_price}}
          {{assign 'product_price' item.price}}
          {{include 'price-sale'}}
        </span>
      </li>
    {{else}}
      <li>
        <span id="productPrice" class="h1">
          {{include 'price' item.price}}
        </span>
      </li>
    {{/if}}

    <p>{{truncatewords (strip_html item.content) 50}}</p>
  </div>

</div>

<hr>
