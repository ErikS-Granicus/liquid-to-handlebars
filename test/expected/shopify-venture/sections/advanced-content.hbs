<div class="page-width">
  <div class="custom-content section-block">
  {{#each section.blocks as |block|}}
    {{#is block.settings.width '25%'}}
        {{assign 'block_width' 'small--one-whole one-quarter'}}
      {{else is block.settings.width '33%'}}
        {{assign 'block_width' 'small--one-whole one-third'}}
      {{else is block.settings.width '50%'}}
        {{assign 'block_width' 'small--one-whole one-half'}}
      {{else is block.settings.width '66%'}}
        {{assign 'block_width' 'small--one-whole two-thirds'}}
      {{else is block.settings.width '75%'}}
        {{assign 'block_width' 'small--one-whole three-quarters'}}
      {{else is block.settings.width '100%'}}
        {{assign 'block_width' 'one-whole'}}
    {{/is}}
    <div class="section-block--padding grid__item {{ block_width }} {{#if block.settings.alignment}}align--{{ block.settings.alignment }}{{/if}}" {{ block.shopify_attributes }}>
      <div class="grid__item-inner grid__item-inner--{{ block.type }}">
        <div class="rte">
          {{ block.settings.code }}
        </div>
      </div>
    </div>
  {{/each}}
  </div>
</div>

{{#schema}}
  {
    "name": "Custom HTML",
    "class": "index-section",
    "max_blocks": 9,
    "blocks": [
      {
        "type": "html",
        "name": "Custom HTML",
        "settings": [
          {
            "type": "html",
            "id": "code",
            "label": "HTML",
            "default": "<div style='text-align:center;'><h2>Use HTML to format your text so it can be easily read.</h2>This text can be used to share information about your brand with customers.</div>"
          },
          {
            "type": "select",
            "id": "width",
            "label": "Container width",
            "default": "100%",
            "options": [
              {
                "value": "25%",
                "label": "25%"
              },
              {
                "value": "33%",
                "label": "33%"
              },
              {
                "value": "50%",
                "label": "50%"
              },
              {
                "value": "66%",
                "label": "66%"
              },
              {
                "value": "75%",
                "label": "75%"
              },
              {
                "value": "100%",
                "label": "100%"
              }
            ]
          },
          {
            "type": "select",
            "id": "alignment",
            "label": "Vertical alignment",
            "default": "top-middle",
            "options": [
              {
                "value": "top-middle",
                "label": "Top"
              },
              {
                "value": "center",
                "label": "Middle"
              },
              {
                "value": "bottom-middle",
                "label": "Bottom"
              }
            ]
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom HTML",
        "category": "Advanced layout",
        "blocks": [
          {
            "type": "html"
          }
        ]
      }
    ]
  }
{{/schema}}
