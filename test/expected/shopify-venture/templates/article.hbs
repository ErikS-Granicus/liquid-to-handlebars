<div class="page-width">
  <article itemscope itemtype="http://schema.org/Article" class="grid">

    <div class="grid__item{{#if (gt blog.all_tags.size 0)}} medium-up--three-quarters large-up--four-fifths{{/if}}">
      {{#comment}}
        The article contents can be found in /sections/article-content.liquid
      {{/comment}}

      {{section 'article-content'}}

      {{section 'featured-products-subsection'}}

      <div class="full-width full-width--return-link">
        <a href="{{ blog.url }}" class="h1 return-link">
          {{include 'icon-arrow-thin-left'}}
          {{t 'blogs.article.back_to_blog' title blog.title}}
        </a>
      </div>
    </div>

    {{#if (gt blog.all_tags.size 0)}}
      <div class="grid__item medium-up--one-quarter large-up--one-fifth small--hide">
        <div class="content-block content-block--small">
          <h3 class="h6 content-block__title">{{t 'blogs.article.tags'}}</h3>
          <ul class="list--no-bullets list--bold">
            {{#each blog.all_tags as |tag|}}
              {{#if (contains current_tags tag)}}
              <li>{{ tag }}</li>
              {{else}}
              <li>{{link_to_tag tag tag}}</li>
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    {{/if}}

  </article>
</div>
